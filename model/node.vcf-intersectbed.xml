<?xml version="1.0" encoding="UTF-8"?>
<node name="vcfintersectbed"
	label="VCF Join" 
	description="VCF/BED intersection"
	generate-model='false'
	xmlns:xi="http://www.w3.org/2001/XInclude"
	>
<inPort name="vcf">
    <column name="vcfIn" label="VCF file" type="string">
      <description><a href="http://www.htslib.org/doc/vcf.html">A Variant Call Format (VCF)</a> file. Can be gzipped or <a href="http://www.ncbi.nlm.nih.gov/pubmed/21208982">bgzipped</a></description>
    </column>
</inPort>
<inPort name="bed">
    <column name="bed" label="IBED" type="string">
      <description><a href="https://genome.ucsc.edu/FAQ/FAQformat.html">A BED </a> file</description>
    </column>
</inPort>

	<property type="column" name="vcf" label="VCF path" description="VCF files" data-type="string"  port="vcf">
  </property>
  	<property type="column" name="bed" label="BED path" description="BED file" data-type="string"  port="bed">
  </property>
  
   
   <xi:include href="outport.vcf_count.xml"/>
  

  <property type="bool" name="inverse" label="inverse" description="Keep variant if no bed overlap"  default="false">
	</property>
	 
<view class="com.github.lindenb.knime5bio.bio.VcfNodeView"/>		 
	 
</node>

