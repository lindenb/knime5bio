<?xml version="1.0" encoding="UTF-8"?>
<node name="vcfheaders" label="VCF Headers" 
	generate-model='false'
	xmlns:xi="http://www.w3.org/2001/XInclude"
	>
  <description>
     <h3>Motivation</h3>
     <p>Creates 3 KNIME tables containing a description of the FILTER/INFO/FORMAT tag in a set of VCF files.</p>
     <xi:include href="footer.html" xpointer="xpointer(/div/*)" parse="xml" />
  </description>	


   <xi:include href="inport.vcf.xml"/>
   
   <outPort name="Filters" description="FILTER">
  	  <column name="FILE" label="File Name" type="string"/>
  	  <column name="Name" label="Name" type="string"/>
  	  <column name="Description" label="Description" type="string"/>
   </outPort>
 
    <outPort name="Infos" description="INFOS">
  	  <column name="FILE" label="File Name" type="string"/>
  	  <column name="Id" label="id" type="string"/>
  	  <column name="Count" label="count" type="int"/>
	  <column name="CountType" label="CountType" type="string"/>
	  <column name="Type" label="Type" type="string"/>
  	  <column name="Description" label="Description" type="string"/>
   </outPort>
   
   
    <outPort name="Format" description="FORMAT">
  	  <column name="FILE" label="File Name" type="string"/>
  	  <column name="Id" label="id" type="string"/>
  	  <column name="Count" label="count" type="int"/>
	  <column name="CountType" label="CountType" type="string"/>
	  <column name="Type" label="Type" type="string"/>
  	  <column name="Description" label="Description" type="string"/>
   </outPort>
  
  <property type="column" name="vcfInput" label="VCF path" description="VCF files" data-type="string"  port="input">
  </property>

</node>

